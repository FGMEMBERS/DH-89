<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>cockpitwall</object-name>
    <object-name>intdoor</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <!-- cockpit models -->
    <model> 
      <path>Aircraft/DH-89/Models/Interior/Panel/panel.xml</path>
      <offsets> 
        <x-m> -4.640 </x-m>
        <y-m>  0.000 </y-m>
        <z-m>  0.013 </z-m>
      </offsets>
    </model>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/DH-89/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -4.223 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.011 </z-m>
    </offsets>
  </model>

  <animation>
    <name>IntPorteComplete</name>
    <object-name>intdoor</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteComplete</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -95 </factor>
    <center>
      <x-m> -1.427 </x-m>
      <y-m> -0.627 </y-m>
      <z-m> -0.057 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>

